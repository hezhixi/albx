<%- include('./layout/getHeaderPage.ejs'); %>
  <div class="main">
    <%- include('./layout/getNavBarPage.ejs');  %>
    <div class="container-fluid">
      <div class="page-title">
        <h1>分类目录</h1>
      </div>
      <!-- 有错误信息时展示 -->
      <div class="alert alert-danger" style="display:none; width:200px;" >
        <strong>提示！</strong><span>哈哈</span>
      </div>
      <div class="row">
        <div class="col-md-4">
          <form>
            <h2>添加新分类目录</h2>
            <div class="form-group">
              <label for="name">名称</label>
              <input id="name" class="form-control" name="name" type="text" placeholder="分类名称">
              <input type="hidden" name="id" id="id">
            </div>
            <div class="form-group">
              <label for="slug">别名</label>
              <input id="slug" class="form-control" name="slug" type="text" placeholder="slug">
              <p class="help-block">https://zce.me/category/<strong>slug</strong></p>
            </div>
            <div class="form-group">
              <!-- <button class="btn btn-primary" type="submit">添加</button> -->
              <input type="button" class="btn btn-primary btnEdit " value="编辑">
              <input type="button" class="btn btn-primary btnAdd " value="添加" >
            </div>
          </form>
        </div>
        <div class="col-md-8">
          <div class="page-action">
            <!-- show when multiple checked -->
            <a class="btn btn-danger btn-sm btn-edits" href="javascript:;" style="display: none; width: 200px;">批量删除</a>
          </div>
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th class="text-center" width="40"><input type="checkbox" class="clickAll"></th>
                <th>名称</th>
                <th>Slug</th>
                <th class="text-center" width="100">操作</th>
              </tr>
            </thead>
            <tbody>
              
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <script type="text/template" id="listTextTemp">
    {{each list as value index}}
    <tr>
      <td class="text-center"><input type="checkbox" class="oneClick" data-id="{{value.id}}"></td>
      <td>{{value.name}}</td>
      <td>{{value.slug}}</td>
      <td class="text-center">
        <a href="javascript:;" data-id="{{value.id}}" data-name="{{value.name}}" data-slug="{{value.slug}}" class="btn btn-info btn-xs btn-edit">编辑</a>
        <a href="javascript:;" class="btn btn-danger btn-xs btn-del" onclick='delCate({{value.id}})'>删除</a>
      </td>
    </tr>
    {{/each}}
  </script>

  <%- include('./layout/getAsidePage.ejs'); %>

  <%- include('./layout/getBottomPage.ejs'); %>
  <!-- 引入客户端模板结构 -->
  <script src="/assets/vendors/template/template.js"></script>
  <!-- 引入客户端渲染 -->
  <script src="/assets/js/cateGories.js"></script>